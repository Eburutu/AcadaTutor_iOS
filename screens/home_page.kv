<HomePage>:
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 1

        canvas.before:
            Color:
                rgba: 0.4, 0.508, 0.33, 0 # Set the background color for the FloatLayout (R, G, B, A)
            Rectangle:
                pos: self.pos
                size: self.size

        

        AdmobBanner:
            size_hint_y: None
            id: banner_layout
            height: 70
            # orientation: 'vertical'            

            # size_hint_y: None
            # height: dp(20)
            # pos_hint: {'center_x': 0.5}

        

        # Buttons
        FloatLayout:
            orientation: 'horizontal'
            canvas.before:
                Color:
                    rgba: 0.4, 0.508, 0.33, 0 #0.2  # Set the background color for the FloatLayout (R, G, B, A)
                Rectangle:
                    pos: self.pos
                    size: self.size

            size_hint_y: 0.35  # Fix the height of the FloatLayout
            height: dp(100)  # Set the absolute pixel height of the FloatLayout
            pos_hint: {'center_x': 0.5, 'y': 0} 

            
            # RoundedImageButton:
            #     on_release: root.open_web_browser_for_Privacy()
            #     pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            ImageButton:
                source: 'assets/button_Edubot.png'
                size_hint: None, None
                on_release: root.goto_Edubot()
                size: dp(150), dp(120)  # Adjust the size as needed
                pos_hint: {'x': 0.05, 'center_y': 0.5}
                allow_stretch: True

            ImageButton:
