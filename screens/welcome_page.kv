<RoundedButton>:
    background_color: 0, 0, 0, 0  # Make the background transparent
    canvas.before:
        Color:
            rgba: 255, 0, 0, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20,]


<WelcomePage>:
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 1

        canvas.before:
            Color:
                rgba: 0.4, 0.508, 0.33, 0 # Set the background color for the FloatLayout (R, G, B, A)
            Rectangle:
                pos: self.pos
                size: self.size

        # AdMob Banner Ad
        # BoxLayout:
        #     orientation: 'vertical'
        #     size_hint_y: 0.25

        AdmobBanner:
            size_hint_y: None
            id: banner_layout
            height: 70
            # orientation: 'vertical'            

            # size_hint_y: None
            # height: dp(20)
            # pos_hint: {'center_x': 0.5}

        # Logo
