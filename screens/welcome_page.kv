            source: 'assets/logo.png'
            # size_hint_y: 1.0
            # size_hint_x: 1.0
            size_hint: (1, 0.2)
            # height: 330
            # allow_stretch: False
            # pos_hint: {'x': 0, 'y': 0.5}
            # keep_ratio: True




        FloatLayout:
            canvas.before:
                Color:
                    rgba: 0.4, 0.508, 0.33, 0.2  # Set the background color for the FloatLayout (R, G, B, A)
                Rectangle:
                    pos: self.pos
                    size: self.size

            size_hint_y: 0.5  # Fix the height of the FloatLayout
            height: dp(100)  # Set the absolute pixel height of the FloatLayout
            pos_hint: {'center_x': 0.5, 'y': 0} 


            RoundedButton:
                id: zoom_button
                text: "SELECT YOUR LANGUAGE"
                on_release: root.open_dropdown(self)
                theme_text_color: "Custom"
                font_size: "14sp"
                text_color: 1, 1, 1, 1  # Set the font color to white (R, G, B, A)
                md_bg_color: 255, 0, 0, 255  # Set the button color to green (R, G, B, A)
                size: dp(300), dp(38)
                # size_hint: (0.7, 0.02)
